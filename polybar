[colors]
; {{{
foreground=#ffffff
foreground-alt=${xrdb:base05:#ffffff}
background=${xrdb:base00_ahtml:#000000}

theme=${xrdb:theme:#222266}
; }}}

[bar/kmarc]
; {{{
height = 28
monitor = ${file:/tmp/polybar-monitor.txt:eDP1}
offset-x = 0
offset-y = 0
margin-left = 0
margin-right = 0
fixed-center = true
wm-restack = i3
;bspwm

background-0 = #44000000
background-1 = #00000000
foreground = ${colors.foreground}

line-size = 3
module-margin = 2

font-0 = "Noto Sans:style=Bold:size=9;2"
font-1 = "MaterialIcons:size=14;4"

modules-left = i3
modules-center = date
modules-right = xkeyboard filesystem memory cpu battery temperature xbacklight volume wlan

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

padding = 3
; }}}

[module/wlan]
; {{{
[module/wlan]
type = internal/network
interface = wlp2s0
interval = 2

format-connected-prefix = 
format-disconnected-prefix = 

;format-connected-suffix = 
;format-disconnected-suffix = 

label-connected =  on
label-disconnected =  off

label-connected-padding = 1
label-disconnected-padding = 1

format-connected-prefix-foreground = ${colors.theme}
format-disconnected-prefix-foreground = ${colors.theme}
; }}}

[module/music]
; {{{
type = custom/script
interval = 2

label = %output%
exec = ~/bin/mpris.sh

; }}}

[module/xwindow]
; {{{
type = internal/xwindow
label = %title:0:60:...%
format-prefix = %{O5}
format-prefix-foreground = ${colors.theme}
; }}}

[module/xkeyboard]
; {{{
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = 
format-prefix-foreground = ${colors.theme}

label-layout = %layout:4%

label-indicator-margin = 1
; }}}

[module/filesystem]
; {{{
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = %{A3:x-terminal-emulator -ls -e bash -ci 'dfc -f; read' &:} 
format-mounted-suffix = %{A}
label-mounted = %percentage_used:4%%
format-mounted-prefix-foreground = ${colors.theme}
; }}}

[module/bspwm]
; {{{
type = internal/bspwm

format = <label-monitor> <label-state> <label-mode>

label-monitor = 
label-monitor-foreground = ${colors.theme}

pin-workspaces = false

label-focused = %index%
label-focused-foreground = ${colors.theme}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2
label-occupied-foreground = ${colors.foreground}

label-urgent = %index%
label-urgent-background = ${colors.theme}
label-urgent-padding = 2

label-empty = "%{O2}•%{O1}"
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2
; }}}

[module/mpd]
; {{{
type = internal/mpd
format-online =  <toggle>   <label-song><icon-prev><icon-stop><icon-next>   <bar-progress>
format-stopped = %{O9}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}•%{O1}
format-stopped-foreground = ${colors.foreground-alt}
format-paused-foreground = ${colors.foreground-alt}
format-offline = ${self.format-stopped}
format-offline-foreground = ${colors.foreground-alt}

icon-foreground = 
icon-play = 
icon-pause = 
icon-stop = 
icon-prev = 
icon-next = 
icon-seekb = 
icon-seekf = 
icon-random = 
icon-repeat = 
icon-repeatone = 
icon-play-foreground = ${colors.theme}
icon-pause-foreground = ${self.icon-play-foreground}
icon-stop-foreground = ${self.icon-play-foreground}
icon-next-foreground = ${self.icon-play-foreground}
icon-prev-foreground = ${self.icon-play-foreground}

bar-progress-width = 10
bar-progress-fill = •%{O1}
bar-progress-fill-foreground = ${colors.theme}
bar-progress-indicator = •%{O1}
bar-progress-empty = •%{O1}
bar-progress-empty-foreground = ${colors.foreground-alt}

label-song = %title:0:20:...% ( %artist:0:20:...% )%{O8}

toggle-on-foreground = ${colors.foreground-alt}
toggle-off-foreground = ${colors.foreground}
; }}}

[module/xbacklight]
; {{{
type = internal/xbacklight

format = <label>
label = %percentage:4%%
format-label-foreground = ${colors.foreground}

format-prefix = 
format-prefix-foreground = ${colors.theme}

format-suffix = %{A}%{A}
; }}}

[module/i3]
; {{{
type = internal/i3

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
;pin-workspaces = true

; This will split the workspace name on ':'
; Default: false
;strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Create click handler used to focus workspace
; Default: true
;enable-click = false

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = false

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction 
; Default: true
reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; Default: false
;fuzzy-match = true

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 1;♚
ws-icon-1 = 2;♛
ws-icon-2 = 3;♜
ws-icon-3 = 4;♝
ws-icon-4 = 5;♞
ws-icon-default = ♟
; NOTE: You cannot skip icons, e.g. to get a ws-icon-6
; you must also define a ws-icon-5.

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.theme}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-underline = ${colors.theme}
label-focused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = ${colors.theme}
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
;label-urgent = %index%
;label-urgent-foreground = #000000
;label-urgent-background = #bd2c40
;label-urgent-padding = 4

; Separator in between workspaces
;label-separator = |
;label-separator-padding = 2
;label-separator-foreground = #ffb52a
; }}}

[module/cpu]
; {{{
type = internal/cpu
interval = 2
format-prefix = %{A3:x-terminal-emulator -ls -e bash -ci 'htop' &:} 
format-prefix-foreground = ${colors.theme}
format-suffix = %{A}
label = %percentage:4:2%%

format = <label>
; }}}

[module/memory]
; {{{
type = internal/memory
interval = 2
format-prefix = 
format-prefix-foreground = ${colors.theme}
label = %percentage_used:4%%
; }}}

[module/date]
; {{{
type = internal/date
interval = 5

date-alt =
date = " %a, %B %d, "

time-alt = %H:%M
time =   %H:%M

format-prefix = " "
format-prefix-foreground = ${colors.theme}

label = %date% %time%
; }}}

[module/volume]
; {{{
type = internal/pulseaudio

format-volume =  <label-volume>

label-volume = %{A3:pavucontrol:}%percentage:4%%%{A}
label-volume-foreground = ${colors.foreground}
format-volume-prefix = %{A3:pavucontrol:}%{A}
format-volume-foreground = ${colors.theme}
label-muted = %percentage:4%%
label-muted-foreground = ${colors.foreground}
format-muted-prefix = 
format-muted-foreground = ${colors.theme}
; }}}

[module/battery]
; {{{
type = internal/battery
battery = BAT0
adapter = ACAD

format-charging = <label-charging>
format-charging-prefix = %{O4}
format-charging-prefix-foreground = ${colors.theme}

format-discharging = <label-discharging>
format-discharging-prefix = %{A3:x-terminal-emulator -ls -e bash -ci 'sudo powertop' &:} %{O4}
format-discharging-prefix-foreground = ${colors.theme}
format-discharging-suffix = %{A}

format-full-prefix = %{O4}
format-full-prefix-foreground = ${colors.theme}
; }}}

[module/temperature]
; {{{
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.theme}

ramp-0 = "  "
; ramp-1 = "  "
; ramp-2 = "  "
ramp-foreground = ${colors.theme}
; }}}

[settings]
; {{{
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
; }}}

[global/wm]
; {{{
margin-top = 0
margin-bottom = 0
; }}}

